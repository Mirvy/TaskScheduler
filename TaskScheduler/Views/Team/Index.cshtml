@model IEnumerable<Team>

@{
    Layout = "_Layout";
}

<table class="table table-sm table-bordered table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>CreatedById</th>
            <th>CreatedDate</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Team t in Model ?? Enumerable.Empty<Team>())
        {
            <tr>
                <td>@t.Id</td>
                <td>@t.Name</td>
                <td>@t.CreatedById</td>
                <td>@t.CreatedDate</td>
                <td class="text-center">
                    <a asp-action="Details" asp-route-id="@t.Id"
                   class="btn btn-sm btn-info">Details</a>
                    <a asp-action="Edit" asp-route-id="@t.Id"
                   class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@t.Id"
                   class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>